<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>MiniBank</title>
  <style>
    :root {
      --bg: #0b1220;
      --card: #121b2e;
      --text: #e7eefc;
      --muted: #a8b3cf;
      --line: rgba(255, 255, 255, .08);
      --accent: #4f8cff;
      --good: #34d399;
      --bad: #fb7185;
      --shadow: 0 20px 60px rgba(0, 0, 0, .35);
      --r: 18px;
    }

    * {
      box-sizing: border-box
    }

    body {
      margin: 0;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;
      background: radial-gradient(1200px 800px at 20% 10%, rgba(79, 140, 255, .25), transparent 60%), radial-gradient(900px 600px at 90% 20%, rgba(52, 211, 153, .18), transparent 50%), linear-gradient(180deg, var(--bg), #060a12);
      color: var(--text);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 24px;
    }

    .shell {
      width: min(980px, 100%);
    }

    .top {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 18px;
      gap: 12px;
      flex-wrap: wrap
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 12px
    }

    .logo {
      width: 42px;
      height: 42px;
      border-radius: 14px;
      background: linear-gradient(135deg, rgba(79, 140, 255, .95), rgba(52, 211, 153, .85));
      box-shadow: var(--shadow)
    }

    .pill {
      padding: 10px 12px;
      background: rgba(255, 255, 255, .06);
      border: 1px solid var(--line);
      border-radius: 999px;
      color: var(--text);
      font-size: 13px;
      text-decoration: none
    }

    .grid {
      display: grid;
      grid-template-columns: 1.2fr .8fr;
      gap: 16px
    }

    @media(max-width:860px) {
      .grid {
        grid-template-columns: 1fr
      }
    }

    .card {
      background: linear-gradient(180deg, rgba(18, 27, 46, .95), rgba(15, 23, 42, .88));
      border: 1px solid var(--line);
      border-radius: var(--r);
      padding: 18px;
      box-shadow: var(--shadow)
    }

    .row {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px
    }

    .muted {
      color: var(--muted)
    }

    .title {
      font-weight: 650
    }

    .balanceBox {
      margin-top: 14px;
      display: flex;
      align-items: flex-end;
      justify-content: space-between;
      gap: 12px;
      padding: 14px;
      background: rgba(255, 255, 255, .04);
      border: 1px solid var(--line);
      border-radius: 16px
    }

    .amount {
      font-size: 34px;
      font-weight: 760;
      letter-spacing: -.5px
    }

    .btn {
      cursor: pointer;
      border: none;
      border-radius: 12px;
      padding: 10px 12px;
      color: var(--text);
      background: rgba(255, 255, 255, .08);
      border: 1px solid var(--line);
      font-weight: 600
    }

    .btn.primary {
      background: linear-gradient(135deg, rgba(79, 140, 255, .95), rgba(79, 140, 255, .65));
      border: none
    }

    label {
      font-size: 12px;
      color: var(--muted)
    }

    input {
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      border: 1px solid var(--line);
      background: rgba(6, 10, 18, .6);
      color: var(--text);
      outline: none
    }

    .inputs {
      margin-top: 14px;
      display: grid;
      gap: 10px
    }

    .note {
      margin-top: 12px;
      padding: 12px;
      border-radius: 14px;
      display: none;
      white-space: pre-wrap
    }

    .ok {
      background: rgba(52, 211, 153, .10);
      border: 1px solid rgba(52, 211, 153, .25)
    }

    .err {
      background: rgba(251, 113, 133, .10);
      border: 1px solid rgba(251, 113, 133, .25)
    }
  </style>
</head>

<body>
  <div class="shell">
    <div class="top">
      <div class="brand">
        <div class="logo"></div>
        <div>
          <div style="font-weight:750">MiniBank</div>
          <div class="muted" style="font-size:12px">Logged in via Keycloak ‚Ä¢ OAuth2 Authorization Code</div>
        </div>
      </div>
      <div style="display:flex;gap:10px;align-items:center">
        <span class="pill">üë§ <%= userName %></span>
        <a class="pill" href="/logout">Logout</a>
      </div>
    </div>

    <div class="grid">
      <div class="card">
        <div class="row">
          <div>
            <div class="title">Account Overview</div>
            <div class="muted">Checking ‚Ä¢ **** 2468</div>
          </div>
          <span class="pill" style="border-color:rgba(52,211,153,.35)">‚óè Active</span>
        </div>

        <div class="balanceBox">
          <div>
            <div class="muted" style="font-size:12px">Available balance</div>
            <div class="amount" id="bal">$<%= balance.toFixed(2) %>
            </div>
          </div>
          <button class="btn" id="toggle">üëÅ Hide</button>
        </div>

        <div class="muted" style="margin-top:12px;font-size:12px">
          This is a mock dashboard for learning consent + token flows (no real money).
        </div>
      </div>

      <div class="card">
        <div class="row">
          <div>
            <div class="title">Quick Transfer</div>
            <div class="muted" style="font-size:12px">Mock transfer via Node route</div>
          </div>
        </div>

        <form class="inputs" id="tf">
          <div>
            <label>Recipient</label>
            <input name="to" placeholder="e.g., bob@minibank.local" required />
          </div>
          <div>
            <label>Amount (USD)</label>
            <input name="amount" type="number" min="1" step="1" placeholder="e.g., 50" required />
          </div>
          <button class="btn primary" type="submit">Transfer</button>
        </form>

        <div class="note" id="note"></div>
      </div>
    </div>
  </div>

  <script>
    const balEl = document.getElementById("bal");
    const toggleBtn = document.getElementById("toggle");
    const note = document.getElementById("note");
    const tf = document.getElementById("tf");

    let shown = true;
    const real = balEl.textContent;

    toggleBtn.addEventListener("click", () => {
      shown = !shown;
      if (shown) {
        balEl.textContent = real;
        toggleBtn.textContent = "üëÅ Hide";
      } else {
        balEl.textContent = "$‚Ä¢‚Ä¢‚Ä¢‚Ä¢.‚Ä¢‚Ä¢";
        toggleBtn.textContent = "üëÅ Show";
      }
    });

    tf.addEventListener("submit", async (e) => {
      e.preventDefault();
      const fd = new FormData(tf);
      const payload = { to: fd.get("to"), amount: Number(fd.get("amount")) };

      console.log("payload", payload)

      const res = await fetch("/transfer", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(payload)
      });

      const data = await res.json();
      console.log("data", data)
      note.style.display = "block";

      if (!res.ok) {
        if (data.error === "CONSENT_REQUIRED") {
          const qs = new URLSearchParams(payload).toString();
          window.location.href = "/authorize-transfer?" + qs;
          return;
        }
        note.className = "note err";
        note.textContent = "Transfer blocked ‚ùå\n" + (data.error || "Unknown error");
        return;
      }

      if (res.ok) {
        const qs = new URLSearchParams({
          to: data.to,
          amount: data.amount,
          balance: data.newBalance,
        }).toString();

        window.location.href = "/transfer-success?" + qs;
      }


      note.className = "note ok";
      note.textContent = "Transfer queued ‚úÖ\nTo: " + data.to + "\nAmount: $" + data.amount.toFixed(2);
      tf.reset();
    });
  </script>
</body>

</html>